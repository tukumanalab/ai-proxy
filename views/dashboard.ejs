<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AI Proxy - Dashboard</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      background: #0f172a;
      color: #e2e8f0;
      padding: 20px;
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
    }

    header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      padding: 30px;
      border-radius: 12px;
      margin-bottom: 30px;
      box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    }

    h1 {
      font-size: 2.5em;
      margin-bottom: 10px;
    }

    .stats {
      display: flex;
      gap: 20px;
      margin-top: 15px;
      flex-wrap: wrap;
    }

    .stat {
      background: rgba(255, 255, 255, 0.1);
      padding: 10px 20px;
      border-radius: 8px;
      backdrop-filter: blur(10px);
    }

    .stat-label {
      font-size: 0.85em;
      opacity: 0.9;
    }

    .stat-value {
      font-size: 1.5em;
      font-weight: bold;
      margin-top: 5px;
    }

    .controls {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
      flex-wrap: wrap;
      gap: 15px;
    }

    .search-box {
      flex: 1;
      min-width: 300px;
    }

    .search-box input {
      width: 100%;
      padding: 12px 20px;
      border: 2px solid #334155;
      border-radius: 8px;
      background: #1e293b;
      color: #e2e8f0;
      font-size: 1em;
    }

    .search-box input:focus {
      outline: none;
      border-color: #667eea;
    }

    .refresh-btn {
      padding: 12px 24px;
      background: #667eea;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1em;
      font-weight: 600;
      transition: background 0.3s;
    }

    .refresh-btn:hover {
      background: #5568d3;
    }

    .table-container {
      background: #1e293b;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    thead {
      background: #334155;
    }

    th {
      padding: 15px;
      text-align: left;
      font-weight: 600;
      text-transform: uppercase;
      font-size: 0.85em;
      letter-spacing: 0.5px;
    }

    td {
      padding: 15px;
      border-top: 1px solid #334155;
    }

    tbody tr {
      transition: background 0.2s;
      cursor: pointer;
    }

    tbody tr:hover {
      background: #2d3748;
    }

    .request-preview {
      max-width: 400px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      font-size: 0.9em;
    }

    .user-message {
      color: #10b981;
      font-weight: 600;
      font-family: 'Monaco', 'Courier New', monospace;
    }

    .system-message {
      color: #94a3b8;
      font-style: italic;
      font-size: 0.85em;
    }

    .method {
      display: inline-block;
      padding: 4px 12px;
      border-radius: 6px;
      font-weight: 600;
      font-size: 0.85em;
    }

    .method-GET { background: #10b981; color: white; }
    .method-POST { background: #3b82f6; color: white; }
    .method-PUT { background: #f59e0b; color: white; }
    .method-DELETE { background: #ef4444; color: white; }
    .method-PATCH { background: #8b5cf6; color: white; }

    .status {
      display: inline-block;
      padding: 4px 12px;
      border-radius: 6px;
      font-weight: 600;
      font-size: 0.85em;
    }

    .status-2xx { background: #10b981; color: white; }
    .status-3xx { background: #3b82f6; color: white; }
    .status-4xx { background: #f59e0b; color: white; }
    .status-5xx { background: #ef4444; color: white; }
    .status-pending { background: #6b7280; color: white; }
    .status-blocked { background: #dc2626; color: white; animation: pulse 2s infinite; }

    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.7; }
    }

    .blocked-row {
      background: rgba(220, 38, 38, 0.1) !important;
    }

    .blocked-row:hover {
      background: rgba(220, 38, 38, 0.2) !important;
    }

    .path {
      font-family: 'Monaco', 'Courier New', monospace;
      font-size: 0.9em;
      color: #a78bfa;
    }

    .duration {
      color: #10b981;
      font-weight: 600;
    }

    .timestamp {
      color: #94a3b8;
      font-size: 0.9em;
    }

    .pagination {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 10px;
      margin-top: 30px;
    }

    .pagination a {
      padding: 10px 15px;
      background: #334155;
      color: #e2e8f0;
      text-decoration: none;
      border-radius: 6px;
      transition: background 0.3s;
    }

    .pagination a:hover {
      background: #475569;
    }

    .pagination a.active {
      background: #667eea;
      font-weight: 600;
    }

    .pagination a.disabled {
      opacity: 0.5;
      pointer-events: none;
    }

    .no-data {
      text-align: center;
      padding: 60px 20px;
      color: #94a3b8;
      font-size: 1.2em;
    }

    .error-icon {
      color: #ef4444;
      font-weight: bold;
    }

    .logo-container {
      display: flex;
      align-items: center;
      gap: 20px;
      margin-bottom: 15px;
    }

    .logo {
      width: 80px;
      height: 80px;
      object-fit: contain;
    }

    .title-wrapper {
      flex: 1;
    }
  </style>
</head>
<body>
  <div class="container">
    <header>
      <div class="logo-container">
        <img src="/logo.png" alt="AI Proxy Logo" class="logo">
        <div class="title-wrapper">
          <h1>AI Proxy Dashboard</h1>
        </div>
      </div>
      <div class="stats">
        <div class="stat">
          <div class="stat-label">Total Requests</div>
          <div class="stat-value"><%= totalCount %></div>
        </div>
        <div class="stat">
          <div class="stat-label">Current Page</div>
          <div class="stat-value"><%= currentPage %> / <%= totalPages %></div>
        </div>
        <div class="stat">
          <div class="stat-label">Showing</div>
          <div class="stat-value"><%= requests.length %> requests</div>
        </div>
      </div>
    </header>

    <div class="controls">
      <div class="search-box">
        <input type="text" id="search" placeholder="Search by path, method, or status..." oninput="filterTable()">
      </div>
      <button class="refresh-btn" onclick="location.reload()">‚Üª Refresh</button>
    </div>

    <div class="table-container">
      <% if (requests.length > 0) { %>
        <table id="requestTable">
          <thead>
            <tr>
              <th style="width: 60px;">ID</th>
              <th style="width: 150px;">Time</th>
              <th style="width: 80px;">Method</th>
              <th style="width: 200px;">Path</th>
              <th>Request Content</th>
              <th style="width: 80px;">Status</th>
              <th style="width: 80px;">Duration</th>
            </tr>
          </thead>
          <tbody>
            <% requests.forEach(req => {
              const isBlocked = req.error && req.error.includes('NG word');
            %>
              <tr onclick="window.location.href='/request/<%= req.id %>'" class="<%= isBlocked ? 'blocked-row' : '' %>">
                <td>#<%= req.id %></td>
                <td class="timestamp"><%= new Date(req.timestamp).toLocaleString('ja-JP') %></td>
                <td><span class="method method-<%= req.method %>"><%= req.method %></span></td>
                <td class="path"><%= req.path %></td>
                <td class="request-preview">
                  <%
                    let preview = '';
                    let isUserMessage = false;
                    try {
                      const body = JSON.parse(req.requestBody || '{}');
                      if (body.messages && Array.isArray(body.messages)) {
                        // Find the last user message
                        const userMessages = body.messages.filter(m => m.role === 'user');
                        if (userMessages.length > 0) {
                          const lastUserMessage = userMessages[userMessages.length - 1];
                          if (lastUserMessage && lastUserMessage.content) {
                            preview = lastUserMessage.content.substring(0, 150);
                            if (lastUserMessage.content.length > 150) preview += '...';
                            isUserMessage = true;
                          }
                        } else {
                          // Fallback to last message if no user message found
                          const lastMessage = body.messages[body.messages.length - 1];
                          if (lastMessage && lastMessage.content) {
                            preview = lastMessage.content.substring(0, 100);
                            if (lastMessage.content.length > 100) preview += '...';
                          }
                        }
                      } else if (body.prompt) {
                        preview = body.prompt.substring(0, 150);
                        if (body.prompt.length > 150) preview += '...';
                        isUserMessage = true;
                      } else {
                        preview = JSON.stringify(body).substring(0, 100) + '...';
                      }
                    } catch (e) {
                      preview = req.requestBody ? req.requestBody.substring(0, 100) + '...' : '-';
                    }
                  %>
                  <span class="<%= isUserMessage ? 'user-message' : 'system-message' %>">
                    <%= preview || '-' %>
                  </span>
                </td>
                <td>
                  <% if (isBlocked) { %>
                    <span class="status status-blocked">üö´ BLOCKED</span>
                  <% } else if (req.statusCode) { %>
                    <span class="status status-<%= Math.floor(req.statusCode / 100) %>xx"><%= req.statusCode %></span>
                  <% } else if (req.error) { %>
                    <span class="status status-5xx error-icon">ERROR</span>
                  <% } else { %>
                    <span class="status status-pending">PENDING</span>
                  <% } %>
                </td>
                <td>
                  <% if (req.duration) { %>
                    <span class="duration"><%= req.duration %>ms</span>
                  <% } else { %>
                    <span class="timestamp">-</span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <div class="no-data">
          No requests captured yet. Start sending requests to see them here.
        </div>
      <% } %>
    </div>

    <% if (totalPages > 1) { %>
      <div class="pagination">
        <a href="?page=<%= currentPage - 1 %>" class="<%= currentPage <= 1 ? 'disabled' : '' %>">‚Üê Previous</a>

        <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
          <a href="?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
        <% } %>

        <a href="?page=<%= currentPage + 1 %>" class="<%= currentPage >= totalPages ? 'disabled' : '' %>">Next ‚Üí</a>
      </div>
    <% } %>
  </div>

  <script>
    function filterTable() {
      const searchTerm = document.getElementById('search').value.toLowerCase();
      const table = document.getElementById('requestTable');
      const rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');

      for (let row of rows) {
        const text = row.textContent.toLowerCase();
        row.style.display = text.includes(searchTerm) ? '' : 'none';
      }
    }

    // Auto-refresh every 10 seconds
    // setInterval(() => location.reload(), 10000);
  </script>
</body>
</html>
