<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AI Proxy - Dashboard</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      background: #f5f5f5;
      color: #333;
      padding: 20px;
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
    }

    header {
      background: #fff;
      padding: 20px 30px;
      border-radius: 8px;
      margin-bottom: 20px;
      border: 1px solid #e0e0e0;
    }

    h1 {
      font-size: 1.8em;
      font-weight: 600;
      color: #333;
      margin-bottom: 15px;
    }

    .stats {
      display: flex;
      gap: 30px;
      flex-wrap: wrap;
    }

    .stat {
      display: flex;
      align-items: baseline;
      gap: 8px;
    }

    .stat-label {
      font-size: 0.9em;
      color: #666;
    }

    .stat-value {
      font-size: 1.2em;
      font-weight: 600;
      color: #333;
    }

    .controls {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
      flex-wrap: wrap;
      gap: 15px;
    }

    .search-box {
      flex: 1;
      min-width: 300px;
    }

    .search-box input {
      width: 100%;
      padding: 10px 15px;
      border: 1px solid #ddd;
      border-radius: 4px;
      background: #fff;
      color: #333;
      font-size: 0.95em;
    }

    .search-box input:focus {
      outline: none;
      border-color: #999;
    }

    .refresh-btn {
      padding: 10px 20px;
      background: #333;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 0.95em;
      font-weight: 500;
    }

    .refresh-btn:hover {
      background: #555;
    }

    .table-container {
      background: #fff;
      border-radius: 8px;
      overflow: hidden;
      border: 1px solid #e0e0e0;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    thead {
      background: #fafafa;
    }

    th {
      padding: 12px 15px;
      text-align: left;
      font-weight: 600;
      font-size: 0.85em;
      color: #666;
      border-bottom: 1px solid #e0e0e0;
    }

    td {
      padding: 12px 15px;
      border-bottom: 1px solid #f0f0f0;
    }

    tbody tr {
      transition: background 0.2s;
      cursor: pointer;
    }

    tbody tr:hover {
      background: #f9f9f9;
    }

    .request-preview {
      max-width: 400px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      font-size: 0.9em;
    }

    .show-more {
      color: #1565c0;
      cursor: pointer;
      font-size: 0.8em;
      margin-left: 5px;
    }

    .show-more:hover {
      text-decoration: underline;
    }

    .modal-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      z-index: 1000;
    }

    .modal-content {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: #fff;
      padding: 20px;
      border-radius: 8px;
      max-width: 600px;
      max-height: 80vh;
      overflow-y: auto;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }

    .modal-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 15px;
    }

    .modal-title {
      font-weight: 600;
      font-size: 1.1em;
    }

    .modal-close {
      background: none;
      border: none;
      font-size: 1.5em;
      cursor: pointer;
      color: #666;
    }

    .modal-close:hover {
      color: #333;
    }

    .modal-body {
      white-space: pre-wrap;
      word-wrap: break-word;
      font-family: 'Monaco', 'Courier New', monospace;
      font-size: 0.9em;
      line-height: 1.5;
      color: #333;
    }

    .user-message {
      color: #2e7d32;
      font-weight: 500;
      font-family: 'Monaco', 'Courier New', monospace;
    }

    .system-message {
      color: #888;
      font-style: italic;
      font-size: 0.85em;
    }

    .method {
      display: inline-block;
      padding: 3px 8px;
      border-radius: 3px;
      font-weight: 500;
      font-size: 0.8em;
    }

    .method-GET { background: #e8f5e9; color: #2e7d32; }
    .method-POST { background: #e3f2fd; color: #1565c0; }
    .method-PUT { background: #fff3e0; color: #ef6c00; }
    .method-DELETE { background: #ffebee; color: #c62828; }
    .method-PATCH { background: #f3e5f5; color: #7b1fa2; }

    .status {
      display: inline-block;
      padding: 3px 8px;
      border-radius: 3px;
      font-weight: 500;
      font-size: 0.8em;
    }

    .status-2xx { background: #e8f5e9; color: #2e7d32; }
    .status-3xx { background: #e3f2fd; color: #1565c0; }
    .status-4xx { background: #fff3e0; color: #ef6c00; }
    .status-5xx { background: #ffebee; color: #c62828; }
    .status-pending { background: #f5f5f5; color: #666; }
    .status-blocked { background: #ffebee; color: #c62828; }

    .blocked-row {
      background: #fff5f5 !important;
    }

    .blocked-row:hover {
      background: #ffebee !important;
    }

    .path {
      font-family: 'Monaco', 'Courier New', monospace;
      font-size: 0.9em;
      color: #555;
    }

    .duration {
      color: #2e7d32;
      font-weight: 500;
    }

    .timestamp {
      color: #888;
      font-size: 0.9em;
    }

    .pagination {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 8px;
      margin-top: 20px;
    }

    .pagination a {
      padding: 8px 12px;
      background: #fff;
      color: #333;
      text-decoration: none;
      border-radius: 4px;
      border: 1px solid #ddd;
      font-size: 0.9em;
    }

    .pagination a:hover {
      background: #f5f5f5;
    }

    .pagination a.active {
      background: #333;
      color: #fff;
      border-color: #333;
    }

    .pagination a.disabled {
      opacity: 0.5;
      pointer-events: none;
    }

    .no-data {
      text-align: center;
      padding: 60px 20px;
      color: #888;
      font-size: 1em;
    }

    .error-icon {
      color: #c62828;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div class="container">
    <header>
      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px;">
        <h1>AI Proxy Dashboard</h1>
        <a href="settings" style="padding: 8px 16px; background: #f5f5f5; color: #333; text-decoration: none; border-radius: 4px; border: 1px solid #ddd; font-size: 0.9em;">Settings</a>
      </div>
      <div class="stats">
        <div class="stat">
          <span class="stat-label">Total Requests:</span>
          <span class="stat-value"><%= totalCount %></span>
        </div>
        <div class="stat">
          <span class="stat-label">LLM Checks:</span>
          <span class="stat-value"><%= llmRequestCount %></span>
        </div>
      </div>
    </header>

    <div class="controls">
      <div class="search-box">
        <input type="text" id="search" placeholder="Search by path, method, or status..." oninput="filterTable()">
      </div>
      <button class="refresh-btn" onclick="location.reload()">Refresh</button>
    </div>

    <% if (totalPages > 1) { %>
      <div class="pagination" style="margin-bottom: 20px;">
        <a href="?page=<%= currentPage - 1 %>" class="<%= currentPage <= 1 ? 'disabled' : '' %>">← Previous</a>

        <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
          <a href="?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
        <% } %>

        <a href="?page=<%= currentPage + 1 %>" class="<%= currentPage >= totalPages ? 'disabled' : '' %>">Next →</a>

        <span style="margin-left: 15px; color: #888; font-size: 0.9em;"><%= currentPage %> / <%= totalPages %></span>
      </div>
    <% } %>

    <div class="table-container">
      <% if (requests.length > 0) { %>
        <table id="requestTable">
          <thead>
            <tr>
              <th style="width: 60px;">ID</th>
              <th style="width: 150px;">Time</th>
              <th style="width: 80px;">Method</th>
              <th style="width: 200px;">Path</th>
              <th>Request Content</th>
              <th style="width: 80px;">Status</th>
              <th style="width: 80px;">Duration</th>
            </tr>
          </thead>
          <tbody>
            <% requests.forEach(req => {
              const isBlocked = req.error && req.error.includes('NG word');
            %>
              <tr onclick="window.location.href='request/<%= req.id %>'" class="<%= isBlocked ? 'blocked-row' : '' %>">
                <td>#<%= req.id %></td>
                <td class="timestamp"><%= new Date(req.timestamp).toLocaleString('ja-JP') %></td>
                <td><span class="method method-<%= req.method %>"><%= req.method %></span></td>
                <td class="path"><%= req.path %></td>
                <td class="request-preview">
                  <%
                    let preview = '';
                    let fullContent = '';
                    let isUserMessage = false;
                    try {
                      const body = JSON.parse(req.requestBody || '{}');
                      if (body.messages && Array.isArray(body.messages)) {
                        // Find the first user message
                        const userMessages = body.messages.filter(m => m.role === 'user');
                        if (userMessages.length > 0) {
                          const firstUserMessage = userMessages[0];
                          if (firstUserMessage && firstUserMessage.content) {
                            let contentText = '';
                            // Handle string content
                            if (typeof firstUserMessage.content === 'string') {
                              contentText = firstUserMessage.content;
                            }
                            // Handle array content (multimodal)
                            else if (Array.isArray(firstUserMessage.content)) {
                              contentText = firstUserMessage.content
                                .map(item => {
                                  if (item.type === 'text' && item.text) {
                                    return item.text;
                                  }
                                  return '';
                                })
                                .filter(t => t)
                                .join(' ');
                            }
                            if (contentText) {
                              // Extract content from <task></task> tags if present
                              const taskMatch = contentText.match(/<task>([\s\S]*?)<\/task>/);
                              if (taskMatch) {
                                contentText = taskMatch[1].trim();
                              }
                              fullContent = contentText;
                              preview = contentText.substring(0, 150);
                              if (contentText.length > 150) preview += '...';
                              isUserMessage = true;
                            }
                          }
                        } else {
                          // Fallback to last message if no user message found
                          const lastMessage = body.messages[body.messages.length - 1];
                          if (lastMessage && lastMessage.content) {
                            let contentText = '';
                            if (typeof lastMessage.content === 'string') {
                              contentText = lastMessage.content;
                            } else if (Array.isArray(lastMessage.content)) {
                              contentText = lastMessage.content
                                .map(item => (item.type === 'text' && item.text) ? item.text : '')
                                .filter(t => t)
                                .join(' ');
                            }
                            if (contentText) {
                              fullContent = contentText;
                              preview = contentText.substring(0, 100);
                              if (contentText.length > 100) preview += '...';
                            }
                          }
                        }
                      } else if (body.prompt) {
                        fullContent = body.prompt;
                        preview = body.prompt.substring(0, 150);
                        if (body.prompt.length > 150) preview += '...';
                        isUserMessage = true;
                      } else {
                        fullContent = JSON.stringify(body);
                        preview = fullContent.substring(0, 100) + '...';
                      }
                    } catch (e) {
                      fullContent = req.requestBody || '';
                      preview = req.requestBody ? req.requestBody.substring(0, 100) + '...' : '-';
                    }
                  %>
                  <span class="<%= isUserMessage ? 'user-message' : 'system-message' %>">
                    <%= preview || '-' %>
                  </span>
                  <% if (fullContent) { %>
                    <span class="show-more" data-content="<%- JSON.stringify(fullContent).slice(1, -1) %>" onclick="event.stopPropagation(); showFullContent(this)">全部を表示</span>
                  <% } %>
                </td>
                <td>
                  <% if (isBlocked) { %>
                    <span class="status status-blocked">BLOCKED</span>
                  <% } else if (req.statusCode) { %>
                    <span class="status status-<%= Math.floor(req.statusCode / 100) %>xx"><%= req.statusCode %></span>
                  <% } else if (req.error) { %>
                    <span class="status status-5xx error-icon">ERROR</span>
                  <% } else { %>
                    <span class="status status-pending">PENDING</span>
                  <% } %>
                </td>
                <td>
                  <% if (req.duration) { %>
                    <span class="duration"><%= req.duration %>ms</span>
                  <% } else { %>
                    <span class="timestamp">-</span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <div class="no-data">
          No requests captured yet. Start sending requests to see them here.
        </div>
      <% } %>
    </div>

    <% if (totalPages > 1) { %>
      <div class="pagination">
        <a href="?page=<%= currentPage - 1 %>" class="<%= currentPage <= 1 ? 'disabled' : '' %>">← Previous</a>

        <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
          <a href="?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
        <% } %>

        <a href="?page=<%= currentPage + 1 %>" class="<%= currentPage >= totalPages ? 'disabled' : '' %>">Next →</a>

        <span style="margin-left: 15px; color: #888; font-size: 0.9em;"><%= currentPage %> / <%= totalPages %></span>
      </div>
    <% } %>
  </div>

  <!-- Modal for full content -->
  <div id="contentModal" class="modal-overlay" onclick="closeModal()">
    <div class="modal-content" onclick="event.stopPropagation()">
      <div class="modal-header">
        <span class="modal-title">Request Content</span>
        <button class="modal-close" onclick="closeModal()">&times;</button>
      </div>
      <div class="modal-body" id="modalBody"></div>
    </div>
  </div>

  <script>
    function filterTable() {
      const searchTerm = document.getElementById('search').value.toLowerCase();
      const table = document.getElementById('requestTable');
      const rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');

      for (let row of rows) {
        const text = row.textContent.toLowerCase();
        row.style.display = text.includes(searchTerm) ? '' : 'none';
      }
    }

    function showFullContent(element) {
      const content = element.getAttribute('data-content');
      document.getElementById('modalBody').textContent = JSON.parse('"' + content + '"');
      document.getElementById('contentModal').style.display = 'block';
    }

    function closeModal() {
      document.getElementById('contentModal').style.display = 'none';
    }

    // Close modal on Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        closeModal();
      }
    });
  </script>
</body>
</html>
