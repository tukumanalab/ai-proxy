<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Settings - AI Proxy</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      background: #f5f5f5;
      color: #333;
      padding: 20px;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
    }

    header {
      background: #fff;
      padding: 20px 30px;
      border-radius: 8px;
      margin-bottom: 20px;
      border: 1px solid #e0e0e0;
    }

    .back-btn {
      display: inline-block;
      padding: 8px 16px;
      background: #f5f5f5;
      color: #333;
      text-decoration: none;
      border-radius: 4px;
      margin-bottom: 15px;
      border: 1px solid #ddd;
      font-size: 0.9em;
    }

    .back-btn:hover {
      background: #eee;
    }

    h1 {
      font-size: 1.5em;
      font-weight: 600;
      color: #333;
    }

    .section {
      background: #fff;
      border-radius: 8px;
      padding: 20px;
      margin-bottom: 15px;
      border: 1px solid #e0e0e0;
    }

    .section-title {
      font-size: 1.1em;
      font-weight: 600;
      margin-bottom: 15px;
      color: #333;
    }

    .add-form {
      display: flex;
      gap: 10px;
      margin-bottom: 20px;
    }

    .add-form input {
      flex: 1;
      padding: 10px 15px;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 0.95em;
    }

    .add-form input:focus {
      outline: none;
      border-color: #999;
    }

    .btn {
      padding: 10px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 0.95em;
      font-weight: 500;
    }

    .btn-primary {
      background: #333;
      color: white;
    }

    .btn-primary:hover {
      background: #555;
    }

    .btn-danger {
      background: #c62828;
      color: white;
      padding: 6px 12px;
      font-size: 0.85em;
    }

    .btn-danger:hover {
      background: #d32f2f;
    }

    .btn-save {
      background: #2e7d32;
      color: white;
      padding: 6px 12px;
      font-size: 0.85em;
    }

    .btn-save:hover {
      background: #388e3c;
    }

    .btn-cancel {
      background: #757575;
      color: white;
      padding: 6px 12px;
      font-size: 0.85em;
    }

    .btn-cancel:hover {
      background: #616161;
    }

    .ng-word-list {
      list-style: none;
    }

    .ng-word-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 12px 15px;
      border-bottom: 1px solid #f0f0f0;
    }

    .ng-word-item:last-child {
      border-bottom: none;
    }

    .ng-word-text {
      font-family: 'Monaco', 'Courier New', monospace;
      font-size: 0.95em;
      color: #333;
    }

    .ng-word-actions {
      display: flex;
      gap: 8px;
    }

    .edit-input {
      padding: 6px 10px;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 0.9em;
      width: 200px;
    }

    .edit-input:focus {
      outline: none;
      border-color: #999;
    }

    .no-words {
      text-align: center;
      padding: 40px 20px;
      color: #888;
    }

    .message {
      padding: 12px 15px;
      border-radius: 4px;
      margin-bottom: 15px;
      font-size: 0.9em;
    }

    .message-success {
      background: #e8f5e9;
      color: #2e7d32;
      border: 1px solid #c8e6c9;
    }

    .message-error {
      background: #ffebee;
      color: #c62828;
      border: 1px solid #ffcdd2;
    }

    .word-count {
      font-size: 0.9em;
      color: #666;
      margin-top: 10px;
    }
  </style>
</head>
<body>
  <div class="container">
    <header>
      <a href="./" class="back-btn">‚Üê Back to Dashboard</a>
      <h1>Settings</h1>
    </header>

    <% if (message) { %>
      <div class="message <%= messageType === 'error' ? 'message-error' : 'message-success' %>">
        <%= message %>
      </div>
    <% } %>

    <div class="section">
      <div class="section-title">LLM Check Status</div>
      <table style="width: auto; margin-bottom: 0;">
        <tr>
          <td style="padding: 8px 15px 8px 0; border: none; color: #666;">LLM_CHECK_ENABLED:</td>
          <td style="padding: 8px 0; border: none;">
            <% if (llmStatus.enabled) { %>
              <span style="color: #2e7d32; font-weight: 500;">true</span>
            <% } else { %>
              <span style="color: #c62828; font-weight: 500;">false</span>
            <% } %>
          </td>
        </tr>
        <tr>
          <td style="padding: 8px 15px 8px 0; border: none; color: #666;">GEMINI_API_KEY:</td>
          <td style="padding: 8px 0; border: none;">
            <% if (llmStatus.hasApiKey) { %>
              <span style="color: #2e7d32; font-weight: 500;">Set</span>
            <% } else { %>
              <span style="color: #c62828; font-weight: 500;">Not set</span>
            <% } %>
          </td>
        </tr>
        <tr>
          <td style="padding: 8px 15px 8px 0; border: none; color: #666;">Status:</td>
          <td style="padding: 8px 0; border: none;">
            <% if (llmStatus.active) { %>
              <span style="background: #e8f5e9; color: #2e7d32; padding: 3px 8px; border-radius: 3px; font-weight: 500; font-size: 0.85em;">Active</span>
            <% } else { %>
              <span style="background: #f5f5f5; color: #666; padding: 3px 8px; border-radius: 3px; font-weight: 500; font-size: 0.85em;">Inactive</span>
            <% } %>
          </td>
        </tr>
      </table>
    </div>

    <div class="section">
      <div class="section-title">NG Words</div>

      <form class="add-form" action="settings/ng-words" method="POST">
        <input type="text" name="word" placeholder="Enter new NG word..." required>
        <button type="submit" class="btn btn-primary">Add</button>
      </form>

      <% if (ngWords.length > 0) { %>
        <ul class="ng-word-list">
          <% ngWords.forEach(ngWord => { %>
            <li class="ng-word-item" id="item-<%= ngWord.id %>">
              <span class="ng-word-text" id="text-<%= ngWord.id %>"><%= ngWord.word %></span>
              <div class="ng-word-actions" id="actions-<%= ngWord.id %>">
                <button class="btn btn-save" onclick="startEdit(<%= ngWord.id %>, '<%= ngWord.word.replace(/'/g, "\\'") %>')">Edit</button>
                <form action="settings/ng-words/<%= ngWord.id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this NG word?');">
                  <button type="submit" class="btn btn-danger">Delete</button>
                </form>
              </div>
            </li>
          <% }) %>
        </ul>
        <div class="word-count">Total: <%= ngWords.length %> words</div>
      <% } else { %>
        <div class="no-words">
          No NG words configured. Add your first NG word above.
        </div>
      <% } %>
    </div>
  </div>

  <script>
    function startEdit(id, currentWord) {
      const textSpan = document.getElementById('text-' + id);
      const actionsDiv = document.getElementById('actions-' + id);

      textSpan.innerHTML = `<input type="text" class="edit-input" id="edit-input-${id}" value="${currentWord}">`;
      actionsDiv.innerHTML = `
        <button class="btn btn-save" onclick="saveEdit(${id})">Save</button>
        <button class="btn btn-cancel" onclick="cancelEdit(${id}, '${currentWord.replace(/'/g, "\\'")}')">Cancel</button>
      `;

      document.getElementById('edit-input-' + id).focus();
    }

    function saveEdit(id) {
      const input = document.getElementById('edit-input-' + id);
      const newWord = input.value.trim();

      if (!newWord) {
        alert('NG word cannot be empty');
        return;
      }

      // Create and submit form
      const form = document.createElement('form');
      form.method = 'POST';
      form.action = `settings/ng-words/${id}`;

      const wordInput = document.createElement('input');
      wordInput.type = 'hidden';
      wordInput.name = 'word';
      wordInput.value = newWord;

      form.appendChild(wordInput);
      document.body.appendChild(form);
      form.submit();
    }

    function cancelEdit(id, originalWord) {
      const textSpan = document.getElementById('text-' + id);
      const actionsDiv = document.getElementById('actions-' + id);

      textSpan.innerHTML = originalWord;
      actionsDiv.innerHTML = `
        <button class="btn btn-save" onclick="startEdit(${id}, '${originalWord.replace(/'/g, "\\'")}')">Edit</button>
        <form action="settings/ng-words/${id}/delete" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this NG word?');">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      `;
    }
  </script>
</body>
</html>
